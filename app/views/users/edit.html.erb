	<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
      <h2><%= @user.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
  <% end %>
<% end %>

    <h2>User-Edit</h2>
	<%= form_for(@user) do |f| %>
		<h4>Name</h4>
		<%= f.text_field :name, class: "name" %>

    	<h4>ProfileImage</h4>
    	<%= f.attachment_field :profile_image, class: "user_image" %>

    	<h4>Introduction</h4>
    	<%= f.text_area :introduction, class: "introduction" %><br>
    	<%= f.submit "変更を保存", class: "btn btn-primary" %>
    <% end %>

