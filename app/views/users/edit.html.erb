<div class="user-edit">

	<h2>User-Edit</h2>
	<%= form_for(@user) do |f| %>
		<h4>Name</h4>
		<%= f.text_field :name %>

    	<h4>ProfileImage</h4>
    	<%= f.attachment_field :profile_image %>

    	<h4>Introduction</h4>
    	<%= f.text_area :introduction %><br>
    	<%= f.submit "変更を保存" %>

    <% end %>


</div>
