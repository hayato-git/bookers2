<div class="index">
	<h2>Books</h2>

	<table width="500">
		<thead>
			<tr>
				<th>Use</th>
				<th>Title</th>
				<th>Opinion</th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
				<tr align="center">
					<td>
					</td>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
					<td> <%= link_to "show", book_path(book.id) %></td>
					<td> <%= link_to "edit", edit_book_path(book.id) %>
					<td> <%= link_to "Destroy", destroy_book_path(book.id), method: :delete %></td>
				</tr>
			<% end %>
			<%= paginate @books, class: "pagenate" %>
		</tbody>
	</table>
</div>

	<h3>User Info</h3>
		<h4>name  <%= @user.name %></h4>
		<h4>introduction  <%= @user.introduction %></h4>
		<% if @user.id == current_user.id %>
			<p><%= link_to "プロフィール編集",edit_user_path(@user) %></p>
		<% end %>