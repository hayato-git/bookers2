<div class="index">
	<h2>Books</h2>

	<table width="500">
		<thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
				<tr align="center">
					<td></td>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
					<td> <%= link_to "show", book_path(book.id) %></td>
					<td> <%= link_to "edit", edit_book_path(book.id) %>
					<td> <%= link_to "Destroy", destroy_book_path(book.id), method: :delete %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>


