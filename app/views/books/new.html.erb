<div class="new">

	<%= form_for(@book) do |f| %>   <!--url: book_path-->
		<% if @book.errors.any? %>
			<h2><%= @book.errors.count %>件エラー発生</h2>
			<% @book.errors.full_messages.each do |message| %>
				<li> <%= message %> </li>
			<% end %>
		<% end %>
		<h2>New Book</h2>
		<h4>Title</h4>
		<%= f.text_field :title, class: "book_title" %>

		<h4>Opinion</h4>
		<%= f.text_area :body, class: "book_body" %>
		<br> <%= f.submit 'Create Book' %> </br>

	<% end %>
	
</div>