<div class="edit">

	<h2>Editing Book</h2>

	<%= form_for(@book) do |f| %>

		<h4>Title</h4>
		<%= f.text_field :title, class: "book_title" %>

		<h4>Opinion</h4>
		<%= f.text_area :body, class: "book_body" %><br>
		<%= f.submit 'Update Book', class: "btn btn-primary" %>

	<% end %>
	<%= link_to "Show", book_path(@book.id), class: "book_#{@book.id}" %>
	<%= link_to "Back", "http://localhost:3000/books", class: "back" %>

</div>
