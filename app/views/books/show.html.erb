<div class="show">

	<h2>Showing Book</h2>

		<% if flash[:notice] %>
			<div class="flash">
				<%= flash[:notice] %>
			</div>
		<% end %>
		<div><%= attachment_image_tag post_comment.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></div>

		<div>Title : <%= @book.title %></div>
		<div>Body : <%= @book.body %></div>
</div>